pre_pkg_preinst() {
  rm --force --recursive "${EROOT}usr/src/rust{,_tmp}"

  git clone https://github.com/rust-lang/rust.git "${EROOT}usr/src/rust_tmp"
  mv --force "${EROOT}usr/src/rust_tmp/src" "${EROOT}usr/src/rust"
  rm --force --recursive "${EROOT}usr/src/rust_tmp"
}

pre_pkg_prerm() {
  rm --force --recursive "${EROOT}usr/src/rust{,_tmp}"
}
